@model IEnumerable<ECommerce.ApplicationCore.Models.Wishlist>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src='@Url.Content(@item.Product?.ImagePath?.Replace("~","https://localhost:7057"))' class="card-img-top product-image" alt="@item.Product.Name">

                    <div class="card-body">
                        <h5 class="card-title">@item.Product.Name</h5>
                        <p class="card-text">@item.Product.Description</p>
                        <p class="card-text">Price: $@item.Product.Price</p> 
                      <a asp-action="RemoveFromWishlist" class="btn btn-warning"  asp-controller="WishList" asp-route-ProductId="@item.ProductId">Remove from WishList</a>

                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <p>No itemes in your wishlist</p>
    }
</div>
